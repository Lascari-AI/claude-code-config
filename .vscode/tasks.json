{
  "version": "2.0.0",
  "tasks": [
    // ═══════════════════════════════════════════════════════════════════════════
    // SESSION MANAGER (apps/core)
    // ═══════════════════════════════════════════════════════════════════════════
    {
      "label": "Core: Start All",
      "dependsOn": ["Core: Database", "Core: Backend", "Core: Frontend"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Core: Database",
      "type": "shell",
      "command": "make db",
      "options": {
        "cwd": "${workspaceFolder}/apps/core"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "core-dev"
      }
    },
    {
      "label": "Core: Backend",
      "type": "shell",
      "command": "make dev-backend",
      "options": {
        "cwd": "${workspaceFolder}/apps/core"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "core-dev"
      }
    },
    {
      "label": "Core: Frontend",
      "type": "shell",
      "command": "make dev-frontend",
      "options": {
        "cwd": "${workspaceFolder}/apps/core"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "core-dev"
      }
    },
    {
      "label": "Core: Stop All",
      "type": "shell",
      "command": "make down",
      "options": {
        "cwd": "${workspaceFolder}/apps/core"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Core: Install Dependencies",
      "type": "shell",
      "command": "make install",
      "options": {
        "cwd": "${workspaceFolder}/apps/core"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
